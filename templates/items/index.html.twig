{% extends 'base.html.twig' %}

{% block title %} La tienda de Franki{% endblock %}

{% block body %}
<h1>Shopping!</h1>
{% if articles %}
<table class="table table-striped">
        <thead>
                <tr>
                    <th>Item name</th>
                    <th>Operations</th>
        
                </tr>
            </thead>

 
    <tbody>
        {% for article in articles %}
        <tr>
            <td>{{ article.title }}</td>
            <td>
                <a href="/article/{{ article.id }}" 
                class="btn btn-blue">Show</a></td>
        </tr>
        {% endfor %} 
    </tbody>
</table>
{% else %}
<p>No items found</p>
{% endif %}
{% endblock %}